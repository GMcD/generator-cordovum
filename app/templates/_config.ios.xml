<?xml version='1.0' encoding='utf-8'?>
<widget id="<%= appBundle %>" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name><%= _.slugify(appName) %></name>
    <description>
        <%= appDescription %>
    </description>
    <author email="<%= appAuthor %>" href="<%= appUrl %>">
        <%= appAuthor %>
    </author>
    <content src="app/app.html?platform=ios" />
    <access origin="*" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="true" />
</widget>
